# KGAS Environment Variables Template
# Copy this file to .env and fill in your actual values

# Environment settings
KGAS_ENV=development  # development, testing, production

# Database Configuration
KGAS_NEO4J_HOST=localhost
KGAS_NEO4J_PORT=7687
KGAS_NEO4J_USERNAME=neo4j
KGAS_NEO4J_PASSWORD=your_neo4j_password
KGAS_NEO4J_DATABASE=neo4j

# LLM API Keys (Required)
KGAS_OPENAI_API_KEY=your_openai_api_key_here
KGAS_ANTHROPIC_API_KEY=your_anthropic_api_key_here
KGAS_GOOGLE_API_KEY=your_google_api_key_here

# Optional Configuration Overrides
KGAS_CIRCUIT_BREAKER_ENABLED=true
KGAS_DEBUG=false
KGAS_ENCRYPT_CREDENTIALS=true

# Security Settings
KGAS_SECRET_KEY=your_secret_key_for_encryption
KGAS_PII_ENCRYPTION=true

# Logging Configuration
KGAS_LOG_LEVEL=INFO
KGAS_LOG_FILE=logs/kgas.log

# Performance Settings
KGAS_MAX_CONNECTIONS=50
KGAS_CONNECTION_TIMEOUT=30
KGAS_API_TIMEOUT=60

# Schema Configuration
KGAS_DEFAULT_SCHEMA_PARADIGM=rdf_owl
KGAS_CROSS_PARADIGM_VALIDATION=true

# Monitoring (Production only)
KGAS_METRICS_ENABLED=true
KGAS_HEALTH_CHECK_ENABLED=true